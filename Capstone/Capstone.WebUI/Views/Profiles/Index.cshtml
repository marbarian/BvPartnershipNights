@model IEnumerable<Capstone.WebUI.Domain.Entities.BvLocation>

@{
    ViewBag.Title = "Restaurant List";
}

<h2>Click to View Restaurant Partnership Night Profile</h2>

<table class="table">
    <tr>
        <th>Store Number</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Phone</th>
    </tr>

@foreach (var item in Model) 
{
    <tr>
        <td>@Html.ActionLink(item.BvStoreNum, "StoreProfile", "Profiles", new { item.BvLocationId }, null)</td>
        <td>@Html.DisplayFor(modelItem => item.Address)</td>
        <td>@Html.DisplayFor(modelItem => item.City)</td>
        <td>@Html.DisplayFor(modelItem => item.State)</td>
        <td>@Html.DisplayFor(modelItem => item.Zip)</td>
        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
    </tr>
}

</table>
