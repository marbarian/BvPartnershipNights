@model IEnumerable<Capstone.WebUI.Domain.Entities.BvLocation>

@{
    ViewBag.Title = "BV Locations";
}

<h2>BV Locations</h2>

<p>@Html.ActionLink("Add a new restaurant", "LocationCreate")</p>

    <table class="table">
        <tr>
            <th>Store Number</th>
            <th>Address</th>
            <th>City</th>
            <th>Zip</th>
            <th>Phone</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.BvStoreNum, "LocationEdit", "CRUD", new { item.BvLocationId }, null)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.City)</td>
                <td>@Html.DisplayFor(modelItem => item.Zip)</td>
                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                <td>
                    @using (Html.BeginForm("LocationDelete", "CRUD", new { item.BvLocationId }))
                    {
                        <input type="submit" value="Delete" />
                    }
                </td>
            </tr>
        }

    </table>





